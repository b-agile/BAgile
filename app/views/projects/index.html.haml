- content_for :top do
  %h1 Listing projects

%table.table.table-striped.table-hover
  %tr
    %th Name
    %th
    %th
    %th

  - @projects.each do |project|
    %tr
      %td= project.name
      %td= link_to 'Show', project ,:class => 'btn btn-primary'
      %td= link_to 'Edit', edit_project_path(project),:class => 'btn btn-warning'
      %td= link_to 'Destroy', project, :method => :delete, :data => { :confirm => 'Are you sure?' },:class => 'btn btn-danger'

%br


.row.button-bar
  = link_to 'New Project', new_project_path ,:class => 'btn btn-primary'
